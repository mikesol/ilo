---
interface Props {
  title?: string;
}

const { title = "MVFM" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        background: #fff;
        color: #999;
        -webkit-font-smoothing: antialiased;
      }

      a {
        color: inherit;
        text-decoration: none;
        transition: color 0.15s ease;
      }

      a:hover {
        color: #e03;
      }
    </style>
  </head>
  <body>
    <header style="padding: 20px 20px 0;">
      <a href="/" style="font-weight: bold; color: #000; font-size: 14px; letter-spacing: 0.05em;">MVFM</a>
    </header>
    <main style="padding: 20px;">
      <slot />
    </main>
  </body>
</html>
