---
import Base from "../layouts/Base.astro";
import { getAllExamples } from "../examples";

const allKinds = Object.keys(getAllExamples()).sort();
const coreKinds = allKinds.filter((k) => k.startsWith("core/"));
const rest = allKinds.filter((k) => !k.startsWith("core/"));
const kinds = [...coreKinds, ...rest];
---

<Base>
  <div class="pt-16 text-lg leading-loose text-justify">
    {kinds.map((kind) => (
      <Fragment><a href={`/${kind}`} class="text-base-500 hover:text-base-50 transition-colors mr-4">{kind}</a>{" "}</Fragment>
    ))}
  </div>
</Base>
