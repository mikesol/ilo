{
  "name": "@mvfm/plugin-anthropic",
  "version": "0.0.1",
  "description": "Anthropic plugin for mvfm",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "biome check src tests && tsc -p tsconfig.json && api-extractor run --local",
    "test": "vitest run",
    "size": "size-limit"
  },
  "files": ["dist", "etc"],
  "peerDependencies": {
    "@mvfm/core": "workspace:*"
  },
  "devDependencies": {
    "@mvfm/core": "workspace:*",
    "@anthropic-ai/sdk": "^0.74.0"
  }
}
